<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lokibt.emulator">

    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LokiBTLibrary">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lokibt.emulator.BluetoothDialog"
            android:excludeFromRecents="true"
            android:exported="true"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">

            <intent-filter>
                <action android:name="com.lokibt.bluetooth.adapter.action.REQUEST_ENABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="com.lokibt.bluetooth.adapter.action.REQUEST_DISCOVERABLE" />
            </intent-filter>
        </activity>

        <service
            android:name="com.lokibt.emulator.EmulatorService"
            android:enabled="true"
            android:exported="true">

            <intent-filter>
                <action android:name="com.lokibt.emulator.action.BIND" />
            </intent-filter>
        </service>

    </application>

</manifest>
